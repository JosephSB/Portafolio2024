<header class="container-header">
  <div class="header">
    <a href="/"><p class="title">JosephSB</p></a>
    <ul class="menu">
      {/*<li class="menu-link"><a href="/experience">Experience</a></li>*/}
      <li class="menu-link"><a href="/projects">Proyectos</a></li>
      <li class="menu-link d-none" id="btn-dark">
        <i class="fa-solid fa-moon"></i>
      </li>
      <li class="menu-link d-none" id="btn-light">
        <i class="fa-solid fa-sun"></i>
      </li>
    </ul>
  </div>
</header>

<script>
  const btnLight = document.getElementById("btn-light");
  const btnDark = document.getElementById("btn-dark");

  const currentTheme = localStorage.getItem("theme");

  if (currentTheme) {
    document.documentElement.setAttribute("data-theme", currentTheme);
    if (currentTheme === "light") btnDark?.classList.remove("d-none")
    else  btnLight?.classList.remove("d-none")
  }

  function switchTheme() {
    const currentTheme = localStorage.getItem("theme");
    if (currentTheme === "light") {
      document.documentElement.setAttribute("data-theme", "dark");
      localStorage.setItem("theme", "dark");
      btnLight?.classList.remove("d-none")
      btnDark?.classList.add("d-none")
    } else {
      document.documentElement.setAttribute("data-theme", "light");
      localStorage.setItem("theme", "light");
      btnLight?.classList.add("d-none")
      btnDark?.classList.remove("d-none")
    }
  }

  btnDark?.addEventListener("click", switchTheme, false);
  btnLight?.addEventListener("click", switchTheme, false);
</script>

